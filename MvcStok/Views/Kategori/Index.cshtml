@using MvcStok.Models.Entity
@model List<Tbl_Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
    </tr>
    <tbody> 
        @foreach(var ktgr in Model)
            {
                <tr>
                    <td>@ktgr.Kategoriid</td>
                    <td>@ktgr.Kategoriad</td>
                    <td>
                        <a href="/Kategori/Sil/@ktgr.Kategoriid" class="btn btn-danger">Sil</a>
                        <a href="/Kategori/KategoriGetir/@ktgr.Kategoriid" class="btn btn-success">Güncelle</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
<a href="/Kategori/YeniKategori" class="btn btn-primary">Yeni kategori ekle</a>