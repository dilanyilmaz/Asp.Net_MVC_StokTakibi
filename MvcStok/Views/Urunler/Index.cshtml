@using MvcStok.Models.Entity
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tblUrun" class="table table-bordered ">
    <thead>
        <tr>
            <th>Urun id</th>
            <th>Urun Adı</th>
            <th>Urun Markası</th>
            <th>Urun Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Ekle Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urunler in Model)
        {
            <tr>
                <td>@urunler.Urunid</td>
                <td>@urunler.Urunad</td>
                <td>@urunler.Marka</td>
                <td>@urunler.Tbl_Kategori.Kategoriad</td>
                <td>@urunler.Fiyat</td>
                <td>@urunler.Stok</td>
                <td>
                    <a href="/Urunler/Sil/@urunler.Urunid" class="btn btn-danger">Sil</a>
                    <a href="/Urunler/UrunGetir/@urunler.Urunid" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a href="YeniUrunEkle" class="btn btn-primary">Yeni Ürün Ekle</a>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $('#tblUrun').DataTable();
</script>